{
  "name": "eliasnoya/tuples-framework",
  "description": "Lightweight PHP framework optimized for minimal resource consumption, specifically designed for seamless integration with the RoadRunner HTTP Server.",
  "license": "MIT",
  "authors": [
    {
      "name": "Elias Noya",
      "email": "eliasnoya@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "version": "1.0.0",
  "autoload": {
    "psr-4": {
      "Tuples\\": "src/"
    },
    "files": [
      "src/Helpers.php"
    ]
  },
  "scripts": {
    "create-project": "php -r \"copy('https://getcomposer.org/installer', 'composer-setup.php');\"",
    "post-create-project-cmd": [
      "php -r \"unlink('composer-setup.php');\"",
      "composer install --no-dev",
      "php -r \"copy('vendor/eliasnoya/tuples-framework/Examples/worker.php', './');\"",
      "php -r \"copy('vendor/eliasnoya/tuples-framework/Examples/.env.example', './.env');\"",
      "mkdir public",
      "./vendor/bin/rr get-binary"
    ]
  },
  "require": {
    "php": ">=8.1.0",
    "nyholm/psr7-server": "1.1",
    "nyholm/psr7": "1.8",
    "vlucas/phpdotenv": "5.6",
    "spiral/roadrunner": "2023.3.0",
    "spiral/roadrunner-cli": "2.5",
    "spiral/roadrunner-http": "3.2"
  }
}
